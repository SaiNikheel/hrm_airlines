{
  "version": 2,
  "projects": [
    {
      "name": "frontend",
      "rootDirectory": "frontend",
      "builds": [
        {
          "src": "package.json",
          "use": "@vercel/static-build",
          "config": {
            "distDir": "build"
          }
        }
      ],
      "routes": [
        {
          "src": "/static/(.*)",
          "dest": "/static/$1"
        },
        {
          "src": "/(.*)",
          "dest": "/index.html"
        }
      ]
    },
    {
      "name": "backend",
      "rootDirectory": "backend",
      "builds": [
        {
          "src": "server.js",
          "use": "@vercel/node"
        }
      ],
      "routes": [
        {}
      ]
    }
  ]
} 